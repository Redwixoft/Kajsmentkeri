@page
@using Kajsmentkeri.Domain
@model Kajsmentkeri.Web.Pages.Users.ListModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="btn-group mb-3" role="group" aria-label="Sport type filter">
    <a asp-page="./List" asp-route-sortOrder="@Model.CurrentSort" asp-route-sportType="@((int)ChampionshipType.IceHockey)"
       class="btn @(Model.SportType == ChampionshipType.IceHockey ? "btn-primary" : "btn-outline-primary")">
        üèí Ice Hockey
    </a>
    <a asp-page="./List" asp-route-sortOrder="@Model.CurrentSort" asp-route-sportType="@((int)ChampionshipType.Football)"
       class="btn @(Model.SportType == ChampionshipType.Football ? "btn-primary" : "btn-outline-primary")">
        ‚öΩ Football
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.NameSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Username @(Model.CurrentSort == "" || Model.CurrentSort == "name_desc" ? (Model.CurrentSort == "name_desc" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.EmailSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Email @(Model.CurrentSort == "email" || Model.CurrentSort == "email_desc" ? (Model.CurrentSort == "email_desc" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.PointsSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Total Points @(Model.CurrentSort == "points" || Model.CurrentSort == "points_asc" ? (Model.CurrentSort == "points" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.WinnersSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Winners @(Model.CurrentSort == "winners" || Model.CurrentSort == "winners_asc" ? (Model.CurrentSort == "winners" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.MissesSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    One-Goal Misses @(Model.CurrentSort == "misses" || Model.CurrentSort == "misses_asc" ? (Model.CurrentSort == "misses" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.LuckersSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Luckers @(Model.CurrentSort == "luckers" || Model.CurrentSort == "luckers_asc" ? (Model.CurrentSort == "luckers" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.OnlyOnesSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Only Ones @(Model.CurrentSort == "onlyones" || Model.CurrentSort == "onlyones_asc" ? (Model.CurrentSort == "onlyones" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.OnlyOneTriesSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Only-one tries @(Model.CurrentSort == "onlyonetries" || Model.CurrentSort == "onlyonetries_asc" ? (Model.CurrentSort == "onlyonetries" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.ChampionshipsSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Championships @(Model.CurrentSort == "championships" || Model.CurrentSort == "championships_asc" ? (Model.CurrentSort == "championships" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.MedalsSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                    Medals @(Model.CurrentSort == "medals" || Model.CurrentSort == "medals_asc" ? (Model.CurrentSort == "medals" ? "‚Üì" : "‚Üë") : "")
                </a>
            </th>
            @if (Model.IsCurrentUserAdmin)
            {
                <th>
                    <a asp-page="./List" asp-route-sortOrder="@Model.AdminSort" asp-route-sportType="@((int)Model.SportType)" class="text-decoration-none text-dark">
                        Admin @(Model.CurrentSort == "admin" || Model.CurrentSort == "admin_desc" ? (Model.CurrentSort == "admin_desc" ? "‚Üì" : "‚Üë") : "")
                    </a>
                </th>
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            var hasStats = Model.UserStats.TryGetValue(user.Id, out var stats);
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(hasStats ? stats.TotalPoints : 0)</td>
                <td>@(hasStats ? stats.CorrectWinners : 0)</td>
                <td>@(hasStats ? stats.OneGoalMisses : 0)</td>
                <td>@(hasStats ? stats.ExactScores : 0)</td>
                <td>@(hasStats ? stats.OnlyCorrect : 0)</td>
                @{
                    var tries = hasStats ? stats.OnlyOneTries : 0;
                    var tooltip = (hasStats && tries > 0) ? $"{(int)Math.Round((double)stats.OnlyCorrect / tries * 100)}%" : null;
                }
                <td title="@tooltip">@tries</td>
                <td>@(hasStats ? stats.ChampionshipCount : 0)</td>
                <td>
                    @if (Model.MedalCounts.TryGetValue(user.Id, out var medals))
                    {
                        foreach (var medal in medals.OrderBy(m => m.Position).ThenByDescending(m => m.Year))
                        {
                            var emoji = medal.Position == 1 ? "ü•á" : medal.Position == 2 ? "ü•à" : "ü•â";
                            <span title="@medal.ChampionshipName @medal.Year">@emoji</span>
                        }
                    }
                </td>
                @if (Model.IsCurrentUserAdmin)
                {
                    <td>@(user.IsAdmin ? "Yes" : "No")</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@user.Id" data-name="@user.UserName">
                            Delete
                        </button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@{
    var recordRows = new List<(string Label, List<Kajsmentkeri.Application.DTOs.RecordEntryDto> Holders)>
    {
        ("Most Points",           Model.Records.MostPoints),
        ("Most Winners",          Model.Records.MostWinners),
        ("Most One-Goal Misses",  Model.Records.MostOneGoalMisses),
        ("Most Luckers",          Model.Records.MostLuckers),
        ("Most Only Ones",        Model.Records.MostOnlyOnes),
        ("Highest Point Gap (1st vs 2nd)", Model.Records.HighestPointGap)
    };
}
<div class="mt-4 mb-4">
    <h5>Records</h5>
    <table class="table table-sm table-bordered">
        <thead class="table-light">
            <tr>
                <th>Record</th>
                <th>Holder</th>
                <th>Value</th>
                <th>Championship</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (label, holders) in recordRows)
            {
                if (holders.Count == 0) continue;
                for (int i = 0; i < holders.Count; i++)
                {
                    var h = holders[i];
                    <tr>
                        @if (i == 0)
                        {
                            <td rowspan="@holders.Count" class="fw-bold align-middle">@label</td>
                        }
                        <td>@h.UserName</td>
                        <td>@h.Value</td>
                        <td>@h.ChampionshipName @h.ChampionshipYear</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="mt-4 mb-4">
    <div class="btn-group mb-3 flex-wrap" role="group">
        <button type="button" class="btn btn-primary btn-sm chart-btn" data-metric="points">Total Points</button>
        <button type="button" class="btn btn-outline-primary btn-sm chart-btn" data-metric="winners">Winners</button>
        <button type="button" class="btn btn-outline-primary btn-sm chart-btn" data-metric="misses">One-Goal Misses</button>
        <button type="button" class="btn btn-outline-primary btn-sm chart-btn" data-metric="luckers">Luckers</button>
        <button type="button" class="btn btn-outline-primary btn-sm chart-btn" data-metric="onlyOnes">Only Ones</button>
    </div>
    <canvas id="usersChart"></canvas>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete user <strong id="deleteTargetName"></strong>?</p>
                    <p class="text-danger"><strong>Warning:</strong> This will permanently delete the user account and ALL their predictions.</p>
                    <input type="hidden" name="id" id="deleteTargetId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');

            var nameInput = deleteModal.querySelector('#deleteTargetName');
            var idInput = deleteModal.querySelector('#deleteTargetId');

            nameInput.textContent = name;
            idInput.value = id;
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @{
        var chartUsers = Model.Users.Select(u => {
            var s = Model.UserStats.GetValueOrDefault(u.Id);
            return new {
                name = u.UserName ?? "?",
                points = s?.TotalPoints ?? 0,
                winners = s?.CorrectWinners ?? 0,
                misses = s?.OneGoalMisses ?? 0,
                luckers = s?.ExactScores ?? 0,
                onlyOnes = s?.OnlyCorrect ?? 0
            };
        }).ToList();
    }
    <script>
        const allUserData = @Html.Raw(Json.Serialize(chartUsers));

        const metricConfigs = {
            points:   { label: 'Total Points',   color: 'rgba(13, 110, 253, 0.8)'  },
            winners:  { label: 'Winners',         color: 'rgba(25, 135, 84, 0.8)'   },
            misses:   { label: 'One-Goal Misses', color: 'rgba(255, 193, 7, 0.9)'   },
            luckers:  { label: 'Luckers',         color: 'rgba(220, 53, 69, 0.8)'   },
            onlyOnes: { label: 'Only Ones',       color: 'rgba(111, 66, 193, 0.8)'  }
        };

        let usersChart = null;

        function showChart(metric) {
            const sorted = [...allUserData].sort((a, b) => b[metric] - a[metric]);
            const cfg = metricConfigs[metric];

            document.querySelectorAll('.chart-btn').forEach(btn => {
                const active = btn.dataset.metric === metric;
                btn.classList.toggle('btn-primary', active);
                btn.classList.toggle('btn-outline-primary', !active);
            });

            if (usersChart) {
                usersChart.data.labels = sorted.map(u => u.name);
                usersChart.data.datasets[0].data = sorted.map(u => u[metric]);
                usersChart.data.datasets[0].label = cfg.label;
                usersChart.data.datasets[0].backgroundColor = cfg.color;
                usersChart.update();
            } else {
                usersChart = new Chart(document.getElementById('usersChart').getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: sorted.map(u => u.name),
                        datasets: [{
                            label: cfg.label,
                            data: sorted.map(u => u[metric]),
                            backgroundColor: cfg.color,
                            borderRadius: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true, ticks: { precision: 0 } } }
                    }
                });
            }
        }

        document.querySelectorAll('.chart-btn').forEach(btn => {
            btn.addEventListener('click', () => showChart(btn.dataset.metric));
        });

        showChart('points');
    </script>
}
