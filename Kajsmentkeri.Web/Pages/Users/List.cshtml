@page
@model Kajsmentkeri.Web.Pages.Users.ListModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.NameSort" class="text-decoration-none text-dark">
                    Username @(Model.CurrentSort == "" || Model.CurrentSort == "name_desc" ? (Model.CurrentSort == "name_desc" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.EmailSort" class="text-decoration-none text-dark">
                    Email @(Model.CurrentSort == "email" || Model.CurrentSort == "email_desc" ? (Model.CurrentSort == "email_desc" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.PointsSort" class="text-decoration-none text-dark">
                    Total Points @(Model.CurrentSort == "points" || Model.CurrentSort == "points_asc" ? (Model.CurrentSort == "points" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.WinnersSort" class="text-decoration-none text-dark">
                    Winners @(Model.CurrentSort == "winners" || Model.CurrentSort == "winners_asc" ? (Model.CurrentSort == "winners" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.MissesSort" class="text-decoration-none text-dark">
                    One-Goal Misses @(Model.CurrentSort == "misses" || Model.CurrentSort == "misses_asc" ? (Model.CurrentSort == "misses" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.LuckersSort" class="text-decoration-none text-dark">
                    Luckers @(Model.CurrentSort == "luckers" || Model.CurrentSort == "luckers_asc" ? (Model.CurrentSort == "luckers" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.OnlyOnesSort" class="text-decoration-none text-dark">
                    Only Ones @(Model.CurrentSort == "onlyones" || Model.CurrentSort == "onlyones_asc" ? (Model.CurrentSort == "onlyones" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.OnlyOneTriesSort" class="text-decoration-none text-dark">
                    Only-one tries @(Model.CurrentSort == "onlyonetries" || Model.CurrentSort == "onlyonetries_asc" ? (Model.CurrentSort == "onlyonetries" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.ChampionshipsSort" class="text-decoration-none text-dark">
                    Championships @(Model.CurrentSort == "championships" || Model.CurrentSort == "championships_asc" ? (Model.CurrentSort == "championships" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            <th>
                <a asp-page="./List" asp-route-sortOrder="@Model.MedalsSort" class="text-decoration-none text-dark">
                    Medals @(Model.CurrentSort == "medals" || Model.CurrentSort == "medals_asc" ? (Model.CurrentSort == "medals" ? "â†“" : "â†‘") : "")
                </a>
            </th>
            @if (Model.IsCurrentUserAdmin)
            {
                <th>
                    <a asp-page="./List" asp-route-sortOrder="@Model.AdminSort" class="text-decoration-none text-dark">
                        Admin @(Model.CurrentSort == "admin" || Model.CurrentSort == "admin_desc" ? (Model.CurrentSort == "admin_desc" ? "â†“" : "â†‘") : "")
                    </a>
                </th>
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            var hasStats = Model.UserStats.TryGetValue(user.Id, out var stats);
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(hasStats ? stats.TotalPoints : 0)</td>
                <td>@(hasStats ? stats.CorrectWinners : 0)</td>
                <td>@(hasStats ? stats.OneGoalMisses : 0)</td>
                <td>@(hasStats ? stats.ExactScores : 0)</td>
                <td>@(hasStats ? stats.OnlyCorrect : 0)</td>
                @{
                    var tries = hasStats ? stats.OnlyOneTries : 0;
                    var tooltip = (hasStats && tries > 0) ? $"{(int)Math.Round((double)stats.OnlyCorrect / tries * 100)}%" : null;
                }
                <td title="@tooltip">@tries</td>
                <td>@(hasStats ? stats.ChampionshipCount : 0)</td>
                <td>
                    @if (Model.MedalCounts.TryGetValue(user.Id, out var medals))
                    {
                        foreach (var medal in medals.OrderBy(m => m.Position).ThenByDescending(m => m.Year))
                        {
                            var emoji = medal.Position == 1 ? "ðŸ¥‡" : medal.Position == 2 ? "ðŸ¥ˆ" : "ðŸ¥‰";
                            <span title="@medal.ChampionshipName @medal.Year">@emoji</span>
                        }
                    }
                </td>
                @if (Model.IsCurrentUserAdmin)
                {
                    <td>@(user.IsAdmin ? "Yes" : "No")</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@user.Id" data-name="@user.UserName">
                            Delete
                        </button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete user <strong id="deleteTargetName"></strong>?</p>
                    <p class="text-danger"><strong>Warning:</strong> This will permanently delete the user account and ALL their predictions.</p>
                    <input type="hidden" name="id" id="deleteTargetId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            
            var nameInput = deleteModal.querySelector('#deleteTargetName');
            var idInput = deleteModal.querySelector('#deleteTargetId');

            nameInput.textContent = name;
            idInput.value = id;
        });
    </script>
}
