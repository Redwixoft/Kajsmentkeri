                        </li>
                         <li class="list-group-item d-flex justify-content-between align-items-center">
                            Only Correct Winner
                            <span class="badge bg-primary rounded-pill">@Model.Championship?.ScoringRules?.PointsForOnlyCorrectWinner</span>
                        </li>
                    </ul>

                    @if (Model.Championship?.SupportsChampionshipWinnerPrediction == true)
                    {
                        <h6>Winner Prediction Scoring</h6>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Gold Medal Winner
