@functions {
    public string GetPredictionCssClass(Prediction? prediction, bool hasResult, bool rowIsHighConfidence = false)
    {
        if (!hasResult || prediction is null)
            return "";

        var textColor = rowIsHighConfidence ? "text-dark" : "text-white";

        if (prediction.Points == 0)
            return $"bg-danger {textColor}";

        var rules = Model.Championship?.ScoringRules;
        if (rules == null) return "";

        var multiplier = prediction.IsHighConfidence ? 2 : 1;
        var win = rules.PointsForCorrectWinner * multiplier;
        var exact = (rules.PointsForCorrectWinner + rules.PointsForExactScore) * multiplier;
        var only = (rules.PointsForCorrectWinner + rules.PointsForExactScore + rules.PointsForOnlyCorrectWinner) * multiplier;

        if (rules.PointsForOnlyCorrectWinner > 0 && prediction.Points == only)
            return "bg-warning text-dark"; // Gold

        if (prediction.Points == exact)
            return $"bg-primary {textColor}"; // Blue

        if (prediction.Points == win)
            return $"bg-success {textColor}"; // Green

        return "";
    }

    public string GetStartTimeString(DateTime utcDateTime)
    {
        var BratislavaTime = _timeService.ToBratislava(utcDateTime);
        return BratislavaTime.Day + "." + BratislavaTime.Month + "." + BratislavaTime.Year + " " + BratislavaTime.Hour.ToString("00") + ":" + BratislavaTime.Minute.ToString("00");
    }

    public string GetMatchTooltip(Match match, string leaderName, string trailingName)
    {
        var now = _timeService.NowBratislava;
        var start = _timeService.ToBratislava(match.StartTimeUtc);
        var tooltip = "";

        if (start > now)
        {
            var diff = start.AddMinutes(1) - now;
            var parts = new List<string>();
            if (diff.Days > 1) parts.Add($"{diff.Days} days");
            else if (diff.Days == 1) parts.Add("1 day");
            
            if (diff.Hours > 1) parts.Add($"{diff.Hours} hours");
            else if (diff.Hours == 1) parts.Add("1 hour");

            if (diff.Minutes > 1) parts.Add($"{diff.Minutes} minutes");
            else if (diff.Minutes == 1) parts.Add("1 minute");

            string timeStr = "";
            if (parts.Count == 1) timeStr = parts[0];
            else if (parts.Count == 2) timeStr = $"{parts[0]} and {parts[1]}";
            else if (parts.Count >= 3) timeStr = $"{string.Join(", ", parts.Take(parts.Count - 1))} and {parts.Last()}";

            if (!string.IsNullOrEmpty(timeStr))
            {
                tooltip = $"In {timeStr}";
            }

            if (diff.TotalMinutes < 10)
            {
                if (!string.IsNullOrEmpty(tooltip)) tooltip += ". ";
                tooltip += $"Leader {leaderName} cannot add predictions";
            }
        }
        else if (now <= start.AddMinutes(5))
        {
            tooltip = $"Last user {trailingName} still can add prediction";
        }

        return tooltip;
    }
}

