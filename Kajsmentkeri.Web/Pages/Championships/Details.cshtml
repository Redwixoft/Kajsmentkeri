                        <div class="mt-3 text-center text-muted">
                            <small>
                                <i class="bi bi-info-circle me-1"></i>
                                <strong>Payment Rules:</strong> Everyone owes the winner <strong>€10</strong>, except the last place player who owes <strong>€20</strong>. The runner-up owes nothing.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

<div class="row">
    <div class="col-lg-12">
        <h5 class="mt-3">Leaderboard</h5>
        <table class="table table-bordered table-sm table-striped text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Points</th>
                    <th>Match winners</th>
                    <th>One-goal misses</th>
                    <th>Luckers</th>
                    <th>Only ones</th>                    
                    @if (Model.Championship?.ScoringRules?.RarityPointsBonus > 0)
                    {
                        <th>Rarity points</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Leaderboard.Count; i++)
                {
                    var entry = Model.Leaderboard[i];
                    var rank = i + 1;

                    var nameCellClass = rank switch
                    {
                        1 => "bg-warning text-dark",   // gold
                        2 => "bg-light text-dark border border-secondary", // silver
                        3 => "bg-warning bg-opacity-50 text-dark", // bronze
                        _ => ""
                    };

                    var totalFinishedMatches = Model.Matches.Count(m => m.HomeScore.HasValue && m.AwayScore.HasValue);
                    var winnersPercentage = totalFinishedMatches > 0 
                        ? (double)entry.CorrectWinners / totalFinishedMatches * 100 
                        : 0;

                    <tr>
                        <td>@($"{(rank == 1 ? "🥇 " : rank == 2 ? "🥈 " : rank == 3 ? "🥉 " : rank.ToString())}")</td>
                        <td class="@nameCellClass">
                            @if (Model.CurrentUserId == entry.UserId)
                            {
                                <span>👉</span>
                            }
                            
                            @{
                                var userWinnerPred = Model.AllWinnerPredictions.FirstOrDefault(p => p.UserId == entry.UserId);
                            }
                            
                            @if (userWinnerPred != null)
                            {
                                <img src="/images/flags/@(userWinnerPred.TeamName).png" class="team-flag me-1" alt="@userWinnerPred.TeamName" title="Predicted winner: @userWinnerPred.TeamName" onerror="this.style.display='none'" />
                            }

                            @entry.UserName
                            @if (Model.CurrentUserId == entry.UserId)
                            {
                                <span>👈</span>
                            }
                        </td>
                        <th>@entry.TotalPoints</th>
                        <td title="@entry.CorrectWinners/@totalFinishedMatches (@winnersPercentage.ToString("0")% success)">@entry.CorrectWinners</td>
                        <td>@entry.OneGoalMisses</td>
                        <td>@entry.ExactScores</td>
                        <td>@entry.OnlyCorrect</td>
                        @if (Model.Championship?.ScoringRules?.RarityPointsBonus > 0)
                        {
                            <td>@entry.RarityPoints.ToString("0.####")</td>
                        }
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@if (Model.Championship!.SupportsChampionshipWinnerPrediction && Model.CurrentUserId != null)
{
    <div class="card bg-light mb-4">
        <div class="card-body">
            <h5 class="card-title">Championship Winner Prediction</h5>
            <div class="row align-items-center">
                <div class="col-md-6">
                    @if (Model.MyWinnerPrediction != null)
                    {
                        <p class="mb-0">
                            Your prediction: <strong>@Model.MyWinnerPrediction.TeamName</strong>
                            @if (Model.Championship.IsChampionshipEnded)
                            {
                                <span class="ms-2 badge @(Model.MyWinnerPrediction.PointsAwarded > 0 ? "bg-success" : "bg-danger")">
                                    @(Model.MyWinnerPrediction.PointsAwarded ?? 0) points
                                </span>
                            }
                        </p>
                    }
                    else if (!Model.Championship.IsChampionshipEnded)
                    {
                        <p class="mb-0 text-muted italic">You haven't made a winner prediction yet.</p>
                    }
                </div>
                <div class="col-md-6 text-md-end">
                    @{
                        var firstMatchStartTime = Model.Matches.FirstOrDefault()?.StartTimeUtc ?? DateTime.MaxValue;
                        var canChangeWinnerPrediction = !Model.Championship.IsChampionshipEnded && firstMatchStartTime > _timeService.UtcNow;
                    }

                    @if (canChangeWinnerPrediction)
                    {
                        <form method="post" asp-page-handler="SubmitWinnerPrediction" class="d-flex gap-2 justify-content-md-end">
                            <select asp-for="WinnerTeamName" class="form-select form-select-sm w-auto">
                                <option value="">Select Team...</option>
                                @foreach (var team in Model.AllTeams)
                                {
                                    <option value="@team" selected="@(Model.MyWinnerPrediction?.TeamName == team ? "selected" : null)">@team</option>
                                }
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Save Prediction</button>
                        </form>
                    }
                    else if (!Model.Championship.IsChampionshipEnded)
                    {
                        <span class="badge bg-secondary">Locked (Championship Started)</span>
                    }
                </div>
            </div>
            
            @if (Model.Championship.IsChampionshipEnded)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#allWinnerPredictions">
                        Show all user predictions
                    </button>
                    <div class="collapse mt-2" id="allWinnerPredictions">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Predicted Winner</th>
                                    <th>Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pred in Model.AllWinnerPredictions.OrderByDescending(p => p.PointsAwarded))
                                {
                                    <tr>
                                        <td>
                                            @{
                                                var userWinnerPredSummary = Model.AllWinnerPredictions.FirstOrDefault(p => p.UserId == pred.UserId);
                                            }
                                            @if (userWinnerPredSummary != null)
                                            {
                                                <img src="/images/flags/@(userWinnerPredSummary.TeamName).png" class="team-flag me-1" alt="@userWinnerPredSummary.TeamName" title="Predicted winner: @userWinnerPredSummary.TeamName" onerror="this.style.display='none'" />
                                            }
                                            @Model.Users.FirstOrDefault(u => u.UserId == pred.UserId)?.UserName
                                        </td>
                                        <td>@pred.TeamName</td>
                                        <td><strong>@pred.PointsAwarded</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
}

