@page "{id:guid}"
@using Kajsmentkeri.Domain
@using System
@inject Kajsmentkeri.Application.Interfaces.IPredictionService PredictionService
@inject Kajsmentkeri.Application.Interfaces.ITimeService _timeService
@model Kajsmentkeri.Web.Pages.Championships.DetailsModel
@{
    ViewData["Title"] = $"{Model.Championship?.Name} ({Model.Championship?.Year})";
}

<h2 style="cursor: pointer;" onclick="showRules()" title="Click to see championship rules">
    @Model.Championship?.Name (@Model.Championship?.Year)
    @if (Model.Championship?.IsTest == true)
    {
        <span class="badge bg-warning text-dark align-middle fs-6">TEST</span>
    }
    @if (Model.Championship?.IsChampionshipEnded == true)
    {
        <span class="badge bg-danger align-middle fs-6">ENDED</span>
    }
</h2>
<p>@Model.Championship?.Description</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.IsAdmin)
{
    <hr />
}

@if (Model.IsAdmin)
{
    <div class="mb-3 d-flex gap-2">
        <a class="btn btn-primary" asp-page="/Matches/Add" asp-route-championshipId="@Model.Championship!.Id">
            ➕ Add Match
        </a>
        <a class="btn btn-warning text-dark" asp-page="/Championships/Edit" asp-route-id="@Model.Championship!.Id">
            ✏️ Edit Championship
        </a>
        @if (Model.Championship.SupportsChampionshipWinnerPrediction && !Model.Championship.IsChampionshipEnded && Model.Matches.All(m => m.HomeScore.HasValue && m.AwayScore.HasValue))
        {
            <button type="button" class="btn btn-danger ms-auto" data-bs-toggle="modal" data-bs-target="#endChampionshipModal">
                🏁 End Championship
            </button>
        }
    </div>
    <hr />
}

<div class="row">
    <div class="col-lg-12">
        <h5 class="mt-3">Leaderboard</h5>
        <table class="table table-bordered table-sm table-striped text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Points</th>
                    <th>Match winners</th>
                    <th>One-goal misses</th>
                    <th>Luckers</th>
                    <th>Only ones</th>                    
                    @if (Model.Championship?.ScoringRules?.RarityPointsBonus > 0)
                    {
                        <th>Rarity points</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Leaderboard.Count; i++)
                {
                    var entry = Model.Leaderboard[i];
                    var rank = i + 1;

                    var nameCellClass = rank switch
                    {
                        1 => "bg-warning text-dark",   // gold
                        2 => "bg-light text-dark border border-secondary", // silver
                        3 => "bg-warning bg-opacity-50 text-dark", // bronze
                        _ => ""
                    };

                    var totalFinishedMatches = Model.Matches.Count(m => m.HomeScore.HasValue && m.AwayScore.HasValue);
                    var winnersPercentage = totalFinishedMatches > 0 
                        ? (double)entry.CorrectWinners / totalFinishedMatches * 100 
                        : 0;

                    <tr>
                        <td>@($"{(rank == 1 ? "🥇 " : rank == 2 ? "🥈 " : rank == 3 ? "🥉 " : rank.ToString())}")</td>
                        <td class="@nameCellClass">
                            @if (Model.CurrentUserId == entry.UserId)
                            {
                                <span>👉</span>
                            }
                            
                            @{
                                var userWinnerPred = Model.AllWinnerPredictions.FirstOrDefault(p => p.UserId == entry.UserId);
                            }
                            
                            @if (userWinnerPred != null)
                            {
                                <img src="/images/flags/@(userWinnerPred.TeamName).png" class="team-flag me-1" alt="@userWinnerPred.TeamName" title="Predicted winner: @userWinnerPred.TeamName" onerror="this.style.display='none'" />
                            }

                            @entry.UserName
                            @if (Model.CurrentUserId == entry.UserId)
                            {
                                <span>👈</span>
                            }
                        </td>
                        <th>@entry.TotalPoints</th>
                        <td title="@entry.CorrectWinners/@totalFinishedMatches (@winnersPercentage.ToString("0")% success)">@entry.CorrectWinners</td>
                        <td>@entry.OneGoalMisses</td>
                        <td>@entry.ExactScores</td>
                        <td>@entry.OnlyCorrect</td>
                        @if (Model.Championship?.ScoringRules?.RarityPointsBonus > 0)
                        {
                            <td>@entry.RarityPoints</td>
                        }
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@if (Model.Championship!.SupportsChampionshipWinnerPrediction && Model.CurrentUserId != null)
{
    <div class="card bg-light mb-4">
        <div class="card-body">
            <h5 class="card-title">Championship Winner Prediction</h5>
            <div class="row align-items-center">
                <div class="col-md-6">
                    @if (Model.MyWinnerPrediction != null)
                    {
                        <p class="mb-0">
                            Your prediction: <strong>@Model.MyWinnerPrediction.TeamName</strong>
                            @if (Model.Championship.IsChampionshipEnded)
                            {
                                <span class="ms-2 badge @(Model.MyWinnerPrediction.PointsAwarded > 0 ? "bg-success" : "bg-danger")">
                                    @(Model.MyWinnerPrediction.PointsAwarded ?? 0) points
                                </span>
                            }
                        </p>
                    }
                    else if (!Model.Championship.IsChampionshipEnded)
                    {
                        <p class="mb-0 text-muted italic">You haven't made a winner prediction yet.</p>
                    }
                </div>
                <div class="col-md-6 text-md-end">
                    @{
                        var firstMatchStartTime = Model.Matches.FirstOrDefault()?.StartTimeUtc ?? DateTime.MaxValue;
                        var canChangeWinnerPrediction = !Model.Championship.IsChampionshipEnded && firstMatchStartTime > _timeService.UtcNow;
                    }

                    @if (canChangeWinnerPrediction)
                    {
                        <form method="post" asp-page-handler="SubmitWinnerPrediction" class="d-flex gap-2 justify-content-md-end">
                            <select asp-for="WinnerTeamName" class="form-select form-select-sm w-auto">
                                <option value="">Select Team...</option>
                                @foreach (var team in Model.AllTeams)
                                {
                                    <option value="@team" selected="@(Model.MyWinnerPrediction?.TeamName == team ? "selected" : null)">@team</option>
                                }
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Save Prediction</button>
                        </form>
                    }
                    else if (!Model.Championship.IsChampionshipEnded)
                    {
                        <span class="badge bg-secondary">Locked (Championship Started)</span>
                    }
                </div>
            </div>
            
            @if (Model.Championship.IsChampionshipEnded)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#allWinnerPredictions">
                        Show all user predictions
                    </button>
                    <div class="collapse mt-2" id="allWinnerPredictions">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Predicted Winner</th>
                                    <th>Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pred in Model.AllWinnerPredictions.OrderByDescending(p => p.PointsAwarded))
                                {
                                    <tr>
                                        <td>
                                            @{
                                                var userWinnerPredSummary = Model.AllWinnerPredictions.FirstOrDefault(p => p.UserId == pred.UserId);
                                            }
                                            @if (userWinnerPredSummary != null)
                                            {
                                                <img src="/images/flags/@(userWinnerPredSummary.TeamName).png" class="team-flag me-1" alt="@userWinnerPredSummary.TeamName" title="Predicted winner: @userWinnerPredSummary.TeamName" onerror="this.style.display='none'" />
                                            }
                                            @Model.Users.FirstOrDefault(u => u.UserId == pred.UserId)?.UserName
                                        </td>
                                        <td>@pred.TeamName</td>
                                        <td><strong>@pred.PointsAwarded</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
}

<hr />

<table class="table table-bordered table-sm table-striped text-center align-middle">
    <thead>
        <tr>
            <th>Match</th>
            <th>Date</th>
            <th>Result</th>
            @foreach (var user in Model.Users)
            {
                <th>
                    @{
                        var userWinnerPredHeader = Model.AllWinnerPredictions.FirstOrDefault(p => p.UserId == user.UserId);
                    }
                    @if (userWinnerPredHeader != null)
                    {
                        <img src="/images/flags/@(userWinnerPredHeader.TeamName).png" class="team-flag me-1" alt="@userWinnerPredHeader.TeamName" title="Predicted winner: @userWinnerPredHeader.TeamName" onerror="this.style.display='none'" />
                    }
                    @user.UserName
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            var leaderName = Model.Leaderboard.FirstOrDefault()?.UserName ?? "???";
            var trailingName = Model.Leaderboard.LastOrDefault()?.UserName ?? "???";
        }
        @foreach (var match in Model.Matches)
        {
            var hasResult = match.HomeScore != null && match.AwayScore != null;
            var matchStarted = match.StartTimeUtc <= _timeService.UtcNow;
            var tooltip = GetMatchTooltip(match, leaderName, trailingName);
            <tr>
                <td>
                    <div class="d-flex align-items-center justify-content-center" onclick="showAuditLogs('@match.Id', '@match.HomeTeam - @match.AwayTeam')" style="cursor: pointer;" title="Admin prediction change history">
                        <img src="/images/flags/@(match.HomeTeam).png" class="team-flag me-2" alt="" onerror="this.style.display='none'" />
                        <span class="text-primary text-decoration-none">@match.HomeTeam - @match.AwayTeam</span>
                        <img src="/images/flags/@(match.AwayTeam).png" class="team-flag ms-2" alt="" onerror="this.style.display='none'" />
                    </div>
                </td>
                <td title="@tooltip">@GetStartTimeString(match.StartTimeUtc)</td>

                <!-- RESULT -->
                <th>
                    @{
                        var result = hasResult ? $"{match.HomeScore}:{match.AwayScore}" : "";
                        var resultCellId = $"result-{match.Id}";
                    }

                    @if (hasResult)
                    {
                        <div id="@resultCellId-display">
                            <span>@result</span>
                            @if (Model.IsAdmin && matchStarted)
                            {
                                <button type="button" class="btn btn-warning btn-sm ms-1" onclick="showEdit('@resultCellId')">
                                    ✏️
                                </button>
                            }
                        </div>

                        @if (Model.IsAdmin && matchStarted)
                        {
                            <form id="@resultCellId-form" asp-page-handler="UpdateResult" method="post" class="d-none" style="display: flex; gap: 0.25rem;">
                                <input type="hidden" name="id" value="@Model.Championship!.Id" />
                                <input type="hidden" name="MatchId" value="@match.Id" />
                                <input name="ResultInput" class="form-control form-control-sm" style="width: 60px;" value="@result" />
                                <button type="submit" class="btn btn-sm btn-success">✔</button>
                            </form>
                        }
                    }
                    else if (Model.IsAdmin && matchStarted)
                    {
                        <form asp-page-handler="UpdateResult" method="post" style="display: flex; gap: 0.25rem;">
                            <input type="hidden" name="id" value="@Model.Championship!.Id" />
                            <input type="hidden" name="MatchId" value="@match.Id" />
                            <input name="ResultInput" class="form-control form-control-sm" style="width: 60px;" placeholder="3:2" />
                            <button type="submit" class="btn btn-sm btn-success">✔</button>
                        </form>
                    }
                </th>

                <!-- PREDICTIONS -->
                @foreach (var user in Model.Users)
                {
                    var key = (match.Id, user.UserId);
                    var hasPrediction = Model.PredictionMap.TryGetValue(key, out var prediction);
                    var isPredictionLocked = await IsPredictionLocked(Model.Championship!.Id, match.Id, user.UserId);
                    var predictionCss = @GetPredictionCssClass(prediction, hasResult);
                    
                    var isOwnColumn = user.UserId == Model.CurrentUserId;
                    
                    var isVisible = true;
                    if (!matchStarted && !isOwnColumn)
                    {
                        if (Model.CurrentUserId == null)
                        {
                            isVisible = false;
                        }
                        else if (Model.IsVisibilityRuleActive)
                        {
                            var myRank = Model.UserRanks.GetValueOrDefault(Model.CurrentUserId.Value, int.MaxValue);
                            var targetRank = Model.UserRanks.GetValueOrDefault(user.UserId, int.MaxValue);
                            
                            // Rule: See others only if they are below you (targetRank < myRank)
                            if (myRank <= targetRank) 
                            {
                                isVisible = false;
                            }
                        }
                    }

                    <td class="prediction-cell @predictionCss">
                        @{
                            var cellId = $"edit-{match.Id}-{user.UserId}";
                            var canEdit = isOwnColumn && !isPredictionLocked;
                        }

                        @if (hasPrediction || canEdit)
                        {
                            <div id="@cellId-display" style="@(hasPrediction ? "" : "display:none")">
                                @if (isVisible || canEdit)
                                {
                                    <span>@prediction</span>
                                }
                                else if (hasPrediction)
                                {
                                    <span title="Hidden until match starts">🔒</span>
                                }
                                
                                @if (canEdit)
                                {
                                    <button type="button" class="btn btn-warning btn-sm ms-1" onclick="showEdit('@cellId')">
                                        ✏️
                                    </button>
                                }
                            </div>
                        }

                        @if (canEdit)
                        {
                            <form id="@cellId-form" method="post" class="ajax-prediction-form @(hasPrediction ? "d-none" : "")" data-display-id="@cellId-display" style="display: flex; gap: 0.25rem;">
                                <input type="hidden" name="id" value="@Model.Championship!.Id" />
                                <input type="hidden" name="MatchId" value="@match.Id" />
                                <input name="PredictionInput" class="form-control form-control-sm" style="width: 60px;" value="@prediction" placeholder="0:0" />
                                <button type="submit" class="btn btn-sm btn-success">✔</button>
                            </form>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <canvas id="leaderboardChart" style="width: 100%; height: 600px;"></canvas>
</div>





@functions {
    public string GetPredictionCssClass(Prediction? prediction, bool hasResult)
    {
        if (!hasResult || prediction is null)
            return "";

        return prediction.Points switch
        {
            0 => "bg-danger text-white",
            3 => "bg-success text-white",
            5 => "bg-primary text-white",
            7 => "bg-warning text-dark",
            _ => ""
        };
    }

    public async Task<bool> IsPredictionLocked(Guid championshipId, Guid matchId, Guid userId)
    {
        var predictionLockTime = await PredictionService.GetPredictionLockTimeAsync(championshipId, matchId, userId);
        return predictionLockTime <= _timeService.UtcNow;
    }

    public string GetStartTimeString(DateTime utcDateTime)
    {
        var BratislavaTime = _timeService.ToBratislava(utcDateTime);
        return BratislavaTime.Day + "." + BratislavaTime.Month + "." + BratislavaTime.Year + " " + BratislavaTime.Hour.ToString("00") + ":" + BratislavaTime.Minute.ToString("00");
    }

    public string GetMatchTooltip(Match match, string leaderName, string trailingName)
    {
        var now = _timeService.NowBratislava;
        var start = _timeService.ToBratislava(match.StartTimeUtc);
        var tooltip = "";

        if (start > now)
        {
            var diff = start.AddMinutes(1) - now;
            var parts = new List<string>();
            if (diff.Days > 1) parts.Add($"{diff.Days} days");
            else if (diff.Days == 1) parts.Add("1 day");
            
            if (diff.Hours > 1) parts.Add($"{diff.Hours} hours");
            else if (diff.Hours == 1) parts.Add("1 hour");

            if (diff.Minutes > 1) parts.Add($"{diff.Minutes} minutes");
            else if (diff.Minutes == 1) parts.Add("1 minute");

            string timeStr = "";
            if (parts.Count == 1) timeStr = parts[0];
            else if (parts.Count == 2) timeStr = $"{parts[0]} and {parts[1]}";
            else if (parts.Count >= 3) timeStr = $"{string.Join(", ", parts.Take(parts.Count - 1))} and {parts.Last()}";

            if (!string.IsNullOrEmpty(timeStr))
            {
                tooltip = $"In {timeStr}";
            }

            if (diff.TotalMinutes < 10)
            {
                if (!string.IsNullOrEmpty(tooltip)) tooltip += ". ";
                tooltip += $"Leader {leaderName} cannot add predictions";
            }
        }
        else if (now <= start.AddMinutes(5))
        {
            tooltip = $"Last user {trailingName} still can add prediction";
        }

        return tooltip;
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Existing validation partial if any -->
    <script>
        function showEdit(id) {
            const display = document.getElementById(`${id}-display`);
            const form = document.getElementById(`${id}-form`);
            if (display && form) {
                display.style.display = 'none';
                form.classList.remove("d-none");
            }
        }



        document.addEventListener("DOMContentLoaded", function () {
            // Existing validation code kept, expanded for AJAX
            document.querySelectorAll("form").forEach(form => {
                form.addEventListener("submit", async function (e) {
                    const input = form.querySelector("input[name='PredictionInput'], input[name='ResultInput']");
                    if (!input) return;

                    const value = input.value.trim();
                    const regex = /^\d+:\d+$/;

                    if (!regex.test(value)) {
                        e.preventDefault();
                        alert("Invalid format. Please use format like 2:1 you fucking moron!");
                        input.focus();
                        return;
                    }

                    // AJAX handling for prediction forms
                    if (form.classList.contains('ajax-prediction-form')) {
                        e.preventDefault();
                        const submitBtn = form.querySelector('button[type="submit"]');
                        const originalBtnText = submitBtn.textContent;
                        submitBtn.disabled = true;
                        submitBtn.textContent = "⏳";

                        const formData = new FormData(form);
                        // MVC/Razor Pages requires AntiForgeryToken
                        // Usually handled automatically by form tag helper, but need to be sure it's in FormData
                        
                        try {
                            const response = await fetch('?handler=SubmitPredictionAjax', {
                                method: 'POST',
                                body: formData
                            });

                            if (!response.ok) {
                                throw new Error(`HTTP error! status: ${response.status}`);
                            }

                            const result = await response.json();

                            if (result.success) {
                                const displayId = form.getAttribute('data-display-id');
                                const displayEl = document.getElementById(displayId);
                                
                                if (displayEl) {
                                    // Update displayed text
                                    const textSpan = displayEl.querySelector('span');
                                    if (textSpan) textSpan.textContent = value;

                                    // Toggle visibility
                                    form.classList.add('d-none');
                                    displayEl.style.display = 'block';
                                } else {
                                    location.reload(); 
                                }
                            } else {
                                alert("Error saving: " + result.message);
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            alert("An error occurred while saving.");
                        } finally {
                            submitBtn.disabled = false;
                            submitBtn.textContent = originalBtnText;
                        }
                    }
                });
            });
        });

        const ctx = document.getElementById('leaderboardChart').getContext('2d');

        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Graph.Labels)),
                datasets: [
                    @foreach (var series in Model.Graph.Series)
                    {
                            <text>
                            {
                                label: "@series.Name",
                                data: @Html.Raw(Json.Serialize(series.Data)),
                                fill: false,
                                tension: 0.2
                            },
                            </text>
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Points Progress by Match'
                    }
                },
                scales: {
                    x: { title: { display: true, text: 'Match' } },
                    y: { title: { display: true, text: 'Points' }, beginAtZero: true }
                }
            }
        });
    </script>

