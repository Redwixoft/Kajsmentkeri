<table class="table table-bordered table-sm table-striped text-center align-middle">
    <thead>
        <tr>
            <th>Match</th>
            <th>Date</th>
            <th>Result</th>
            @foreach (var user in Model.Users)
            {
                <th>
                    @{
                        var userWinnerPredHeader = Model.AllWinnerPredictions.FirstOrDefault(p => p.UserId == user.UserId);
                    }
                    @if (userWinnerPredHeader != null)
                    {
                        <img src="/images/flags/@(userWinnerPredHeader.TeamName).png" class="team-flag me-1" alt="@userWinnerPredHeader.TeamName" title="Predicted winner: @userWinnerPredHeader.TeamName" onerror="this.style.display='none'" />
                    }
                    @user.UserName
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            var leaderName = Model.Leaderboard.FirstOrDefault()?.UserName ?? "???";
            var trailingName = Model.Leaderboard.LastOrDefault()?.UserName ?? "???";
        }
        @foreach (var match in Model.Matches)
        {
            var hasResult = match.HomeScore != null && match.AwayScore != null;
            var matchStarted = match.StartTimeUtc <= _timeService.UtcNow;
            var tooltip = GetMatchTooltip(match, leaderName, trailingName);
            Prediction? myMatchPrediction = null;
            if (Model.CurrentUserId.HasValue)
                Model.PredictionMap.TryGetValue((match.Id, Model.CurrentUserId.Value), out myMatchPrediction);
            var isMyHighConfidenceRow = myMatchPrediction?.IsHighConfidence == true;
            var myPredLocked = Model.CurrentUserId.HasValue && Model.IsPredictionLockedSync(match.Id, Model.CurrentUserId.Value);
            var canToggleHCForRow = Model.CurrentUserId.HasValue && !myPredLocked && myMatchPrediction != null && Model.Championship!.AllowHighConfidencePrediction;
            <tr class="@(isMyHighConfidenceRow ? "table-warning" : "")" title="@(isMyHighConfidenceRow ? "Your high confidence prediction!" : "")" style="@(isMyHighConfidenceRow ? "border-left: 3px solid #fd7e14;" : "")">
                <td>
                    <div class="d-flex align-items-center justify-content-center">
                        @if (matchStarted)
                        {
                            <div class="d-flex align-items-center" onclick="showAuditLogs('@match.Id', '@match.HomeTeam - @match.AwayTeam')" style="cursor: pointer;" title="Prediction change history">
                                <img src="/images/flags/@(match.HomeTeam).png" class="team-flag me-2" alt="" onerror="this.style.display='none'" />
                                <span class="text-primary text-decoration-none">@match.HomeTeam - @match.AwayTeam</span>
                                <img src="/images/flags/@(match.AwayTeam).png" class="team-flag ms-2" alt="" onerror="this.style.display='none'" />
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <img src="/images/flags/@(match.HomeTeam).png" class="team-flag me-2" alt="" onerror="this.style.display='none'" />
                                <span class="text-dark text-decoration-none">@match.HomeTeam - @match.AwayTeam</span>
                                <img src="/images/flags/@(match.AwayTeam).png" class="team-flag ms-2" alt="" onerror="this.style.display='none'" />
                            </div>
                        }
                        @if (canToggleHCForRow)
                        {
                            <button type="button"
                                    class="btn btn-sm ms-2 high-confidence-toggle match-rocket-btn @(myMatchPrediction?.IsHighConfidence == true ? "btn-warning" : "btn-outline-secondary")"
                                    data-match-id="@match.Id"
                                    data-championship-id="@Model.Championship!.Id"
                                    title="@(myMatchPrediction?.IsHighConfidence == true ? "Clear high confidence" : "Mark as high confidence (doubles your points!)")">
                                🚀
                            </button>
                        }
                    </div>
                </td>
                <td title="@tooltip">@GetStartTimeString(match.StartTimeUtc)</td>

                <!-- RESULT -->
                <th>
                    @{
                        var result = hasResult ? $"{match.HomeScore}:{match.AwayScore}" : "";
                        var resultCellId = $"result-{match.Id}";
                    }

                    @if (hasResult)
                    {
                        <div id="@resultCellId-display">
                            <span>@result</span>
                            @if (Model.CurrentUserId != null && matchStarted)
                            {
                                <button type="button" class="btn btn-warning btn-sm ms-1" onclick="showEdit('@resultCellId')">
                                    ✏️
                                </button>
                            }
                        </div>

                        @if (Model.CurrentUserId != null && matchStarted)
                        {
                            <form id="@resultCellId-form" asp-page-handler="UpdateResult" method="post" class="d-none" style="display: flex; gap: 0.25rem;">
                                <input type="hidden" name="id" value="@Model.Championship!.Id" />
                                <input type="hidden" name="MatchId" value="@match.Id" />
                                <input name="ResultInput" class="form-control form-control-sm" style="width: 60px;" value="@result" />
                                <button type="submit" class="btn btn-sm btn-success">✔</button>
                            </form>
                        }
                    }
                    else if (Model.CurrentUserId != null && matchStarted)
                    {
                        <form asp-page-handler="UpdateResult" method="post" style="display: flex; gap: 0.25rem;">
                            <input type="hidden" name="id" value="@Model.Championship!.Id" />
                            <input type="hidden" name="MatchId" value="@match.Id" />
                            <input name="ResultInput" class="form-control form-control-sm" style="width: 60px;" placeholder="3:2" />
                            <button type="submit" class="btn btn-sm btn-success">✔</button>
                        </form>
                    }
                </th>

                <!-- PREDICTIONS -->
                @foreach (var user in Model.Users)
                {
                    var key = (match.Id, user.UserId);
                    var hasPrediction = Model.PredictionMap.TryGetValue(key, out var prediction);
                    var isPredictionLocked = Model.IsPredictionLockedSync(match.Id, user.UserId);
                    var predictionCss = GetPredictionCssClass(prediction, hasResult, isMyHighConfidenceRow);
                    
                    var isOwnColumn = user.UserId == Model.CurrentUserId;
                    
                    var isVisible = true;
                    if (!matchStarted && !isOwnColumn)
                    {
                        if (Model.CurrentUserId == null)
                        {
                            isVisible = false;
                        }
                        else if (Model.IsVisibilityRuleActive)
                        {
                            var myRank = Model.UserRanks.GetValueOrDefault(Model.CurrentUserId.Value, int.MaxValue);
                            var targetRank = Model.UserRanks.GetValueOrDefault(user.UserId, int.MaxValue);
                            
                            // Rule: See others only if they are below you (targetRank < myRank)
                            if (myRank <= targetRank) 
                            {
                                isVisible = false;
                            }
                        }
                    }

                    var cellId = $"edit-{match.Id}-{user.UserId}";
                    var canEdit = isOwnColumn && !isPredictionLocked;
                    var canToggleHighConfidence = isOwnColumn && !isPredictionLocked && hasPrediction && Model.Championship!.AllowHighConfidencePrediction;

                    <td class="prediction-cell @predictionCss">

                        @if (hasPrediction || canEdit)
                        {
                            <div id="@cellId-display" style="@(hasPrediction ? "" : "display:none")">
                                @if (prediction?.IsHighConfidence == true)
                                {
                                    <span title="High confidence prediction!" style="cursor: help;">🚀</span>
                                }
                                @if (isVisible || canEdit)
                                {
                                    <span>@prediction</span>
                                    @if (prediction?.OneGoalMiss == true)
                                    {
                                        <span title="One-goal miss!" style="cursor: help;" class="ms-1">🎯</span>
                                    }
                                }
                                else if (hasPrediction)
                                {
                                    <span title="Hidden until match starts">🔒</span>
                                }

                                @if (canEdit)
                                {
                                    <button type="button" class="btn btn-warning btn-sm ms-1" onclick="showEdit('@cellId')">
                                        ✏️
                                    </button>
                                }
                            </div>
                        }

                        @if (canEdit)
                        {
                            <form id="@cellId-form" method="post" class="ajax-prediction-form @(hasPrediction ? "d-none" : "")" data-display-id="@cellId-display" style="display: flex; gap: 0.25rem;">
                                <input type="hidden" name="id" value="@Model.Championship!.Id" />
                                <input type="hidden" name="MatchId" value="@match.Id" />
                                <input name="PredictionInput" class="form-control form-control-sm" style="width: 60px;" value="@prediction" placeholder="0:0" />
                                <button type="submit" class="btn btn-sm btn-success">✔</button>
                            </form>
                        }

                    </td>
                }
            </tr>
        }
    </tbody>
</table>

