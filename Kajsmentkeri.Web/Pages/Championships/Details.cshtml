                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showAuditLogs(matchId, matchName) {
            const modal = new bootstrap.Modal(document.getElementById('auditLogModal'));
            const content = document.getElementById('auditLogContent');
            const matchNameEl = document.getElementById('auditMatchName');

            matchNameEl.textContent = matchName;
            content.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"></div><p class="mt-2">Loading history...</p></div>';
            
            modal.show();

            fetch(`?handler=AuditLogs&matchId=${matchId}`)
                .then(response => response.json())
                .then(logs => {
                    if (logs.length === 0) {
                        content.innerHTML = '<div class="text-center py-4 text-muted">No administrative changes recorded for this match.</div>';
                        return;
                    }

                    content.innerHTML = logs.map(log => `
                        <div class="list-group-item px-0 py-3">
                            <div class="d-flex w-100 justify-content-between mb-1">
                                <small class="text-muted fw-bold">${log.timestamp}</small>
                            </div>
                            <p class="mb-1 small">${log.message}</p>
                        </div>
                    `).join('');
                })
                .catch(error => {
                    console.error('Error fetching audit logs:', error);
                    content.innerHTML = '<div class="text-center py-4 text-danger">Failed to load history. Please try again.</div>';
                });
        }

        function showRules() {
             var myModal = new bootstrap.Modal(document.getElementById('rulesModal'));
             myModal.show();
        }
    </script>
