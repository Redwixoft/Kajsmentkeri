@page "{id:guid}"
@using Kajsmentkeri.Domain
@using System
@inject Kajsmentkeri.Application.Interfaces.ITimeService _timeService
@model Kajsmentkeri.Web.Pages.Championships.DetailsModel
@{
    ViewData["Title"] = $"{Model.Championship?.Name} ({Model.Championship?.Year})";
}

<div class="row mb-3">
    <div class="col-lg-8 col-md-7">
        <h2 style="cursor: pointer;" onclick="showRules()" title="Click to see championship rules">
            @(Model.Championship?.Type == ChampionshipType.Football ? "⚽" : "🏒")
            @Model.Championship?.Name (@Model.Championship?.Year)
            @if (Model.Championship?.IsTest == true)
            {
                <span class="badge bg-warning text-dark align-middle fs-6">TEST</span>
            }
            @if (Model.Championship?.IsChampionshipEnded == true)
            {
                <span class="badge bg-danger align-middle fs-6">ENDED</span>
            }
        </h2>
        <p class="mb-0">@Model.Championship?.Description</p>
    </div>
    <div class="col-lg-4 col-md-5 mt-3 mt-md-0">
        <div class="card bg-light border text-muted">
            <div class="card-body p-2">
                <h6 class="text-uppercase fw-bold mb-2" style="font-size: 0.7rem; letter-spacing: 0.05em;">Quick Rules</h6>
                <div style="font-size: 0.75rem;">
                    <div class="d-flex justify-content-between mb-1">
                        <span>Match (Winner/Exact/Only):</span>
                        <span class="fw-bold text-dark">@Model.Championship?.ScoringRules?.PointsForCorrectWinner / @Model.Championship?.ScoringRules?.PointsForExactScore / @Model.Championship?.ScoringRules?.PointsForOnlyCorrectWinner pts</span>
                    </div>
                    @if (Model.Championship?.SupportsChampionshipWinnerPrediction == true)
                    {
                        <div class="d-flex justify-content-between mb-1">
                            <span>Champ (1st/2nd/3rd):</span>
                            <span class="fw-bold text-dark">@Model.Championship?.ScoringRules?.PointsForChampionshipWinner / @Model.Championship?.ScoringRules?.PointsForChampionshipRunnerUp / @Model.Championship?.ScoringRules?.PointsForChampionshipThirdPlace pts</span>
                        </div>
                    }
                    <div class="border-top pt-1 mt-1">
                        <span class="d-block">Everyone pays <strong>€10</strong> to winner.</span>
                        <span class="d-block">Last place pays <strong>€20</strong>. Runner-up <strong>€0</strong>.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.IsAdmin)
{
    <hr />
}

@if (Model.IsAdmin)
{
    <div class="mb-3 d-flex gap-2">
        <a class="btn btn-primary" asp-page="/Matches/Add" asp-route-championshipId="@Model.Championship!.Id">
            ➕ Add Match
        </a>
        <a class="btn btn-warning text-dark" asp-page="/Championships/Edit" asp-route-id="@Model.Championship!.Id">
            ✏️ Edit Championship
        </a>
        @if (Model.Championship.SupportsChampionshipWinnerPrediction && !Model.Championship.IsChampionshipEnded && Model.Matches.All(m => m.HomeScore.HasValue && m.AwayScore.HasValue))
        {
            <button type="button" class="btn btn-danger ms-auto" data-bs-toggle="modal" data-bs-target="#endChampionshipModal">
                🏁 End Championship
            </button>
        }
    </div>
    <hr />
}

    @if (Model.Championship.IsChampionshipEnded)
    {
        <div class="alert alert-info d-flex align-items-center mb-3">
            <i class="bi bi-info-circle-fill me-2 fs-4"></i>
            <div>
                <strong>Championship has ended!</strong> <span>Check out the official results below unless you are the winner, then check your bank account.</span>
            </div>
        </div>
    }

    @if (Model.Championship.IsChampionshipEnded && Model.Leaderboard.Any())
    {
        var winner = Model.Leaderboard.First();
        var isMe = Model.CurrentUserId == winner.UserId;

        <div class="card border-warning shadow-sm mb-4">
            <div class="card-header bg-warning text-dark py-3 d-flex align-items-center">
                <span class="fs-3 me-2">🏆</span>
                <h3 class="h4 mb-0 fw-bold">Championship Winner: @winner.UserName</h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                     <!-- Payment Info -->
                    <div class="col-md-12">
                        @if (!string.IsNullOrEmpty(Model.Championship.WinnerIban))
                        {
                            <div class="alert alert-success">
                                <h6 class="alert-heading fw-bold"><i class="bi bi-credit-card me-2"></i>Payment Details</h6>
                                <p class="mb-1"><strong>IBAN:</strong> <span class="font-monospace user-select-all">@Model.Championship.WinnerIban</span></p>
                                @if(!string.IsNullOrEmpty(Model.Championship.WinnerNote))
                                {
                                    <p class="mb-0"><strong>Note:</strong> @Model.Championship.WinnerNote</p>
                                }
                            </div>
                        }
                        else if (isMe)
                        {
                             <div class="alert alert-warning">
                                <h6 class="alert-heading"><i class="bi bi-exclamation-circle me-2"></i>Action Required</h6>
                                <p class="mb-2">Congratulations! Please provide your IBAN so others can pay you.</p>
                                <form method="post" asp-page-handler="SubmitWinnerPaymentInfo">
                                    <div class="mb-2">
                                        <label asp-for="WinnerIban" class="form-label visually-hidden">IBAN</label>
                                        <input asp-for="WinnerIban" class="form-control form-control-sm" placeholder="Enter your IBAN" required />
                                    </div>
                                    <div class="mb-2">
                                        <label asp-for="WinnerNote" class="form-label visually-hidden">Note</label>
                                        <input asp-for="WinnerNote" class="form-control form-control-sm" placeholder="Optional note (e.g. 'Revolut ok')" />
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-dark w-100">Save Payment Info</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light border text-center text-muted py-4">
                                <i class="bi bi-hourglass-split fs-4 d-block mb-2"></i>
                                <span>Waiting for the winner to provide payment details...</span>
                            </div>
