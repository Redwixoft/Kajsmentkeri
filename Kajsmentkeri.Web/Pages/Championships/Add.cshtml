@page
@using Kajsmentkeri.Domain
@model Kajsmentkeri.Web.Pages.Championships.AddModel
@{
    ViewData["Title"] = "Add Championship";
}

<h2>Add Championship</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Type" class="form-label"></label>
        <select asp-for="Input.Type" class="form-select">
            <option value="@((int)ChampionshipType.IceHockey)">🏒 Ice Hockey</option>
            <option value="@((int)ChampionshipType.Football)">⚽ Football</option>
        </select>
        <span asp-validation-for="Input.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Input.SupportsChampionshipWinnerPrediction" class="form-check-input" />
        <label asp-for="Input.SupportsChampionshipWinnerPrediction" class="form-check-label"></label>
        <span asp-validation-for="Input.SupportsChampionshipWinnerPrediction" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Year" class="form-label"></label>
        <input asp-for="Input.Year" class="form-control" />
        <span asp-validation-for="Input.Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PointsForCorrectWinner" class="form-label"></label>
        <input asp-for="Input.PointsForCorrectWinner" class="form-control" />
        <span asp-validation-for="Input.PointsForCorrectWinner" class="text-danger" value="3"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PointsForExactScore" class="form-label"></label>
        <input asp-for="Input.PointsForExactScore" class="form-control" />
        <span asp-validation-for="Input.PointsForExactScore" class="text-danger" value="2"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PointsForOnlyCorrectWinner" class="form-label"></label>
        <input asp-for="Input.PointsForOnlyCorrectWinner" class="form-control" />
        <span asp-validation-for="Input.PointsForOnlyCorrectWinner" class="text-danger" value="2"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.RarityPointsBonus" class="form-label"></label>
        <input asp-for="Input.RarityPointsBonus" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Input.RarityPointsBonus" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Input.EnforceLeaderboardVisibilityRules" class="form-check-input" />
        <label asp-for="Input.EnforceLeaderboardVisibilityRules" class="form-check-label"></label>
        <span asp-validation-for="Input.EnforceLeaderboardVisibilityRules" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Input.IsTest" class="form-check-input" />
        <label asp-for="Input.IsTest" class="form-check-label"></label>
        <span asp-validation-for="Input.IsTest" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Input.AllowHighConfidencePrediction" class="form-check-input" />
        <label asp-for="Input.AllowHighConfidencePrediction" class="form-check-label"></label>
        <span asp-validation-for="Input.AllowHighConfidencePrediction" class="text-danger"></span>
    </div>

    <hr />
    <h5>Winner Prediction Scoring</h5>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Input.PointsForChampionshipWinner" class="form-label"></label>
            <input asp-for="Input.PointsForChampionshipWinner" class="form-control" />
            <span asp-validation-for="Input.PointsForChampionshipWinner" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.PointsForChampionshipRunnerUp" class="form-label"></label>
            <input asp-for="Input.PointsForChampionshipRunnerUp" class="form-control" />
            <span asp-validation-for="Input.PointsForChampionshipRunnerUp" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.PointsForChampionshipThirdPlace" class="form-label"></label>
            <input asp-for="Input.PointsForChampionshipThirdPlace" class="form-control" />
            <span asp-validation-for="Input.PointsForChampionshipThirdPlace" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
